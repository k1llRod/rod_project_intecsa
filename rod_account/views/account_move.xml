<odoo>
    <data>
        <record id="view_move_form_inherit_totals" model="ir.ui.view">
            <field name="name">account.move.form.inherit.totals</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <!-- Insertamos despuÃ©s del campo "journal_id" -->
                <xpath expr="//field[@name='journal_id']" position="after">
                    <group>
                        <field name="total_debit" readonly="1" invisible="1"/>
                        <field name="total_credit" readonly="1" invisible="1"/>
                    </group>
                </xpath>
                <xpath expr="//label[@for='ref']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='ref']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
