<odoo>
    <data>
        <record id="view_move_form_inherit_totals" model="ir.ui.view">
            <field name="name">account.move.form.inherit.totals</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <!-- Insertamos después del campo "journal_id" -->
                <xpath expr="//field[@name='journal_id']" position="after">
                    <group>
                        <field name="total_debit" readonly="1" invisible="1"/>
                        <field name="total_credit" readonly="1" invisible="1"/>
                    </group>
                </xpath>
                <xpath expr="//label[@for='ref']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='ref']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='ref'][2]" position="after">
                    <field name="literal_number" />
                    <field name="move_type"/>
                    <field name="vr_send_to_middleware"/>
                </xpath>

            </field>
        </record>
        <record id="action_vr_send_to_middleware_server" model="ir.actions.server">
            <field name="name">Enviar a VR Middleware</field>
            <field name="model_id" ref="rod_account.model_account_move"/>
            <field name="state">code</field>
            <field name="binding_model_id" ref="rod_account.model_account_move"/>
            <!-- Ejecuta el método Python sobre los IDs seleccionados -->
            <field name="code">
                action = records.action_vr_send_to_middleware()
            </field>
        </record>

    </data>
</odoo>
