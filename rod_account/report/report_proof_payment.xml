<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="rod_account_layout">
            <div class="header">
                <div class="row">
                    <t t-set="company" t-value="o.company_id"/>
                    <t t-set="user" t-value="user"/>
                    <div class="row mt20 mb32" style="border-bottom:1px solid #dddbdb;padding-bottom:10px;">
                        <div class="col-4">
                            <img src="/rod_account/static/src/img/intecsa.jpeg" style="width:200px;"/>
                        </div>
                        <div class="col-4 text-center" style="font-size:20px;margin-top:25px;">
                            <ul style="list-style:none;">
                                <li><strong>Comprobante de diario</strong></li>
                                <li><span t-field="o.journal_id.name"/></li>
                                <li><span t-field="o.date"/></li>
                            </ul>
                        </div>
                        <div class="col-4 text-center" style="font-size:20px;margin-top:25px;">
                            <span t-field="o.name"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="article o_report_layout_standard">
                <t t-out="0"/>
            </div>
            <div class="footer o_standard_footer">
                <div class="row">
                    <table style="width:100%;border-top:1px solid black;border-bottom:1px solid black;">
                        <tr>

                        </tr>
                        <tr>
                            <td>
<!--                                <center>-->
<!--                                    <span t-field="o.user_id.name"/>-->
<!--                                </center>-->
                            </td>
                            <td>
                                <center></center>
                            </td>
                            <td>
                                <center></center>
                            </td>
                        </tr>
                    </table>
                    <table style="width:100%;border-top:1px solid black;border-bottom:1px solid black;margin-top:2px;">
                        <tr>
                            <td style="width:33%;">
                                <center>Telf: 2311120 - 2314946</center>
                            </td>
                            <td style="width:33%;">
                                <center>@ intecsa@intecsa.com.bo</center>
                            </td>
                            <td style="width:33%;">
                                <center>https://www.intecsa.com.bo</center>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </template>
        <template id="rod_proof_layout">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <t t-call="rod_account.rod_account_layout">
                            <div class="oe_structure"/>
                            <div class="row mt20 mb32">
                                <div class="col-6" style="font-size:16px;">
                                    <ul style="list-style:none;">
                                        <li>
                                            <strong>Glosa general: </strong><span t-field="o.ref"/>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-6" style="font-size:16px;">
                                    <ul style="list-style:none;">
                                        <li>
                                            <strong>T.C.: </strong>
                                        </li>
                                    </ul>
                                </div>

                            </div>
                            <div>
                                <table class="table table-bordered" style="font-size:13px;width:100%;">
                                    <tr>
                                        <th>Codigo de cuenta</th>
                                        <th>Descripcion de la cuenta</th>
                                        <th>Debe</th>
                                        <th>Haber</th>
                                        <th>Debe US$</th>
                                        <th>Haber US$</th>
                                    </tr>
                                    <t t-foreach="o.line_ids" t-as="p">
                                        <tr>
                                            <td>
                                                <span t-field="p.account_id"/>
                                            </td>
                                            <td>
                                                <span t-field="p.account_id.name"/>
                                            </td>
                                            <td>
                                                <span t-field="p.debit"/>
                                            </td>
                                            <td>
                                                <span t-field="p.credit"/>
                                            </td>
                                            <td>
<!--                                                <span t-field="p.price_subtotal"/>-->
                                            </td>
                                            <td>

                                            </td>
                                        </tr>
                                    </t>
                                    <tfoot>
                                        <tr>
                                            <td colspan="2" style="text-align:right;">
                                                <strong>Total del comprobante: </strong>
                                            </td>
                                            <td>
                                                <span t-field="o.amount_total"/>
                                            </td>
                                            <td>
                                                <span t-field="o.amount_total"/>
                                            </td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="oe_structure"/>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>