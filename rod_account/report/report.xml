<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_letter_landscape" model="report.paperformat">
            <field name="name">Carta Horizontal</field>
            <field name="default" eval="False"/>
            <field name="format">Letter</field>  <!-- Use predefined Letter size -->
            <field name="orientation">Portrait</field>  <!-- Set landscape mode -->
            <field name="margin_top" eval="40"/>
            <field name="margin_bottom" eval="20"/>
            <field name="margin_left" eval="10"/>
            <field name="margin_right" eval="10"/>
            <field name="header_spacing" eval="35"/>
        </record>
        <record id="action_report_pdf_proforma" model="ir.actions.report">
            <field name="name">Impresion de asientos contables</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">rod_account.rod_proof_layout</field>
            <field name="report_file">rod_account.report.rod_proof_layout</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="paperformat_id" ref="rod_account.paperformat_letter_landscape"/>
            <field name="binding_type">report</field>
        </record>
        <record id="account_move_line_pdf_report" model="ir.actions.report">
            <field name="name">Reporte de Account Move Line</field>
            <field name="model">account.move.line</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">rod_account.report_account_move_line</field>
            <field name="report_file">rod_account.report_account_move_line</field>
            <field name="binding_model_id" ref="account.model_account_move_line"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'Reporte Account Move Line - %s' % object.date'</field>
        </record>

        <record id="report_mayor_book" model="ir.actions.report">
            <field name="name">Reporte de libro mayor</field>
            <field name="model">account.move.line</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">rod_account.report_mayor_book_pdf</field>
            <field name="report_file">rod_account.report_mayor_book_pdf</field>
            <field name="binding_model_id" ref="account.model_account_move_line"/>
<!--            <field name="paperformat_id" ref="rod_account_coa.paperformat_officio_landscape"/>-->
<!--            <field name="paperformat_id" ref="rod_cooperativa_aportes.paperformat_certificate" />-->
            <field name="binding_type">report</field>
        </record>
        <record id="report_sums_balances" model="ir.actions.report">
            <field name="name">Reporte de sumas y saldos</field>
            <field name="model">account.move.line</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">rod_account.report_sums_balances_pdf</field>
            <field name="report_file">rod_account.report_sums_balances_pdf</field>
            <field name="binding_model_id" ref="account.model_account_move_line"/>
<!--            <field name="paperformat_id" ref="rod_account_coa.paperformat_officio_landscape"/>-->
<!--            <field name="paperformat_id" ref="rod_cooperativa_aportes.paperformat_certificate" />-->
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>