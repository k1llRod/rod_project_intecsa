<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_case_search_view_leads_inherit_fix" model="ir.ui.view">
            <field name="name">crm.case.search.view.leads.fix</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <!-- Reemplazamos el filtro de Customer -->
                <field name="partner_id" position="replace">
                    <field name="partner_id" string="Customer" filter_domain="[
                        '|', '|', '|',
                        ('partner_id.name', 'ilike', self),
                        ('partner_name', 'ilike', self),
                        ('email_from', 'ilike', self),
                        ('contact_name', 'ilike', self)
                    ]"/>
                </field>
            </field>
        </record>

    </data>
</odoo>