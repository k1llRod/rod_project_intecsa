<odoo>
    <data noupdate="1">

        <!-- DefiniciÃ³n del Grupo -->
        <record id="group_custom_user" model="res.groups">
            <field name="name">Custom User Group</field>
            <field name="category_id" ref="base.module_category_sales_management"/>
            <field name="comment">Este grupo tiene permisos personalizados para ciertas operaciones.</field>
        </record>

        <!-- Permisos del Grupo para el modelo stock.rule -->
        <record id="rule_custom_group_stock_rule" model="ir.rule">
            <field name="name">Custom Group Stock Rule</field>
            <field name="model_id" ref="stock.model_stock_rule"/>
            <field name="groups" eval="[(4, ref('product_sales_by_location.group_custom_user'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>