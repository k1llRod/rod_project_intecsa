<odoo>
    <record id="view_res_config_settings_inherit_sales_accounts" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.sales.accounts</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Insertamos en la secciÃ³n de Ventas -->
            <xpath expr="//block[@name='catalog_setting_container']" position="after">
                <block title="Cuentas Extras para comisiones" name="account_commission">
                    <setting string="Cuenta boleta de garantia">
                        <field name="account_guarantee_slip_ids"/>
                    </setting>
                    <setting string="Cuenta gastos de transporte">
                        <field name="account_transportation_expenses_ids"/>
                    </setting>
                    <setting string="Cuenta documentos legalizados">
                        <field name="account_legalized_documents_ids"/>
                    </setting>
                    <setting string="Cuenta comision de cliente">
                        <field name="account_client_commission_ids"/>
                    </setting>
                    <setting string="Cuenta factura de proveedor">
                        <field name="account_supplier_invoice_ids"/>
                    </setting>
                    <setting string="Cuenta base gastos">
                        <field name="account_base"/>
                    </setting>
                    <setting string="Cuenta de impuesto de gastos ">
                        <field name="account_tax_expense"/>
                    </setting>
                    <setting string="Diario comision">
                        <field name="journal_id"/>
                    </setting>
                    <setting string="Diario pago sin factura">
                        <field name="payment_with_invoice"/>
                    </setting>
                    <setting string="Diario gastos">
                        <field name="journal_expense_id"/>
                    </setting>

                </block>
            </xpath>
        </field>
    </record>
</odoo>
