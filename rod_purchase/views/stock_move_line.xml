<odoo>
    <data>
        <record id="view_picking_form_inh_rod" model="ir.ui.view">
            <field name="name">stock.picking.form.inh</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="name"/>
                </xpath>
                <xpath expr="//page[@name='operations']/field/tree/field[@name='description_picking']" position="after">
                    <field name="price_unit" optional="hidden"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>