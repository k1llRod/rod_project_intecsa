<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista del Wizard -->
    <record id="view_inventory_product_wizard_form" model="ir.ui.view">
        <field name="name">inventory.product.wizard.form</field>
        <field name="model">wizard.inventory.product</field>
        <field name="arch" type="xml">
            <form string="Seleccionar Productos para Inventario">
                <group>
                    <field name="official_dollar_exchange"/>
                    <field name="parallel_dollar_exchange"/>
<!--                    <field name="company_id" invisible="1"/>-->
                </group>
                <group col="4">
                    <field name="product_quants_id" nolabel="1" colspan="4" options="{'no_create': True}">
                        <tree string="Productos" editable="bottom" >
                            <field name="company_id" column_invisible="1"/>
                            <field name="product_id"/>
                            <field name="location_id"/>
                            <field name="lot_id"/>
                            <field name="price_unit" string="Costo"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="Aplicar" type="object" name="update_dollar_exchange" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para abrir el Wizard -->
    <record id="action_inventory_product_wizard" model="ir.actions.act_window">
        <field name="name">Costeo Productos</field>
        <field name="res_model">wizard.inventory.product</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>