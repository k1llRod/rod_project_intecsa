<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="type_sale_tree_id">
        <field name="name">Type sale tree</field>
        <field name="model">type.sale</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="number_days"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="type_sale_form_id">
        <field name="name">Type sale form</field>
        <field name="model">type.sale</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="number_days"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_type_sale_id">
        <field name="name">Configuracion tipo de venta</field>
        <field name="res_model">type.sale</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        name="Tipo de venta"
        id="menu_type_sale_id"
        action="action_type_sale_id"
        parent="sale.menu_sale_config"
        sequence="80"
    />
</odoo>