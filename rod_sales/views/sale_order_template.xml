<odoo>
    <data>
        <record id="sale_order_template_view_form_inh_rod" model="ir.ui.view">
            <field name="name">sale.order.template.form.inh.rod</field>
            <field name="model">sale.order.template</field>
            <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="user_id" readonly="1"/>
                </xpath>
            </field>
        </record>
        <record id="sale_order_template_view_tree_inh_rod" model="ir.ui.view">
            <field name="name">sale.order.template.tree.inh.rod</field>
            <field name="model">sale.order.template</field>
            <field name="inherit_id" ref="sale_management.sale_order_template_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="user_id"/>
                </xpath>
            </field>
        </record>

        <record id="sale_management.sale_order_template_action" model="ir.actions.act_window">
            <field name="domain">[('user_id', '=', uid)]</field>
            <!-- Aplica solo a usuarios del grupo "Usuarios: Solo ventas" -->
            <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>
    </data>
</odoo>