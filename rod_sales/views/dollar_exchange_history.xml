<odoo>
    <!-- Vista en Lista (tree) -->
    <record id="view_dollar_exchange_history_tree" model="ir.ui.view">
        <field name="name">dollar.exchange.history.tree</field>
        <field name="model">dollar.exchange.history</field>
        <field name="arch" type="xml">
            <tree string="Historial de Cambio de D贸lar" editable="bottom">
                <field name="product_ids"/>
                <field name="lot_name"/>
                <field name="date"/>
                <field name="official_dollar_exchange"/>
                <field name="old_cost"/>
                <field name="parallel_dollar_exchange"/>
                <field name="new_cost"/>
            </tree>
        </field>
    </record>

    <!-- Vista en Formulario -->
    <record id="view_dollar_exchange_history_form" model="ir.ui.view">
        <field name="name">dollar.exchange.history.form</field>
        <field name="model">dollar.exchange.history</field>
        <field name="arch" type="xml">
            <form string="Historial de Cambio de D贸lar">
                <sheet>
                    <group>
                        <field name="product_ids"/>
                        <field name="lot_name"/>
                        <field name="date"/>
                        <field name="official_dollar_exchange"/>
                        <field name="old_cost"/>
                        <field name="parallel_dollar_exchange"/>
                        <field name="new_cost"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acci贸n para abrir el historial -->
    <record id="action_dollar_exchange_history" model="ir.actions.act_window">
        <field name="name">Historial de D贸lar</field>
        <field name="res_model">dollar.exchange.history</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>