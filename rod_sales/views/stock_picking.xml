<odoo>
    <record id="view_picking_form_inherit_print_button" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.print.button</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <!-- Insertar el botÃ³n en el header -->
            <xpath expr="//header" position="inside">
                <button name="do_print_picking"
                        type="object"
                        string="Imprimir Picking"
                        class="btn-primary"
                        icon="fa-print"/>
            </xpath>

        </field>
    </record>
</odoo>
