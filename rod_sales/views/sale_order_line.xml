<odoo>
    <data>
        <record id="sale_order_form_readonly_id" model="ir.ui.view">
            <field name="name">sale.order.form.inh</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
<!--                    <field name="payment_comision" invisible="0"/>-->
                    <field name="print_image"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='purchase_price']"
                       position="after">
                    <field name="standard_price" readonly="parent.readonly_user == True" sum="Total" optional="hidden"/>
<!--                    <field name="delivery_cost" sum="Total"/>-->
                </xpath>
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='purchase_price']"
                       position="attributes">
                    <attribute name="sum">Total</attribute>
                    <attribute name="groups">sales_team.group_sale_manager</attribute>
                </xpath>
                <xpath expr="//group[@name='partner_details']/field[@name='partner_id']" position="after">
                    <field name="validity" required="1"/>
                    <field name="warranty"/>
                    <field name="payment_method"/>
                    <field name="delivery"/>
                    <field name="type_sale_id"/>
                    <field name="readonly_user" invisible="1"/>
                    <field name="commission_percentage" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page[@name='order_lines']" position="after">
                    <page string="Costos Adicionales" name="additional_costs">
                        <field name="additional_costs_ids">
                            <tree editable="bottom">
                                <field name="sale_order_ids" column_invisible="True"/>
                                <field name="select_additional_costs"/>
                                <field name="date"/>
                                <field name="amount" sum="Total"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="sale_margin_sale_order_line_form_inh" model="ir.ui.view">
            <field name="name">sale.order.line.tree.margin.view.form.inh</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_margin.sale_margin_sale_order_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='purchase_price']"
                       position="replace">
                    <field name="purchase_price" readonly="parent.readonly_user == True" optional="hide"/>

                </xpath>
            </field>
        </record>

        <record id="sale_margin_sale_order_inh" model="ir.ui.view">
            <field name="name">sale.order.margin.view.form.inh</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_margin.sale_margin_sale_order"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='text-nowrap'][1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//label[@for='margin'][1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="after">
                    <label for="margin" groups="base.group_user"/>
                    <div class="text-nowrap" groups="base.group_user">
                        <field name="margin" class="oe_inline"/>
                        <field name="amount_untaxed" invisible="1" widget="account-tax-totals-field"/>
                        <span class="oe_inline" invisible="amount_untaxed == 0">
                            (<field name="margin_percent" nolabel="1" class="oe_inline" widget="percentage"/>)
                        </span>
                    </div>
                    <hr/><br/>
                    <label for="delivery_total" groups="base.group_user"/>
                    <div class="text-nowrap" groups="base.group_user">
                        <field name="delivery_total" class="oe_inline"/>
                    </div>
                    <label for="cost_total" groups="base.group_user"/>
                    <div class="text-nowrap" groups="base.group_user">
                        <field name="cost_total" class="oe_inline"/>
                    </div>

                    <label for="margin_commission" groups="base.group_user"/>
                    <div class="text-nowrap" groups="base.group_user">
                        <field name="margin_commission" class="oe_inline"/>
                        <field name="amount_untaxed" invisible="1"/>
                        <span class="oe_inline" invisible="amount_untaxed == 0">
                            (<field name="margin_percent" nolabel="1" class="oe_inline" widget="percentage"/>)
                        </span>
                    </div>
                    <label for="commission_total" groups="base.group_user"/>
                    <div class="text-nowrap" groups="base.group_user">
                        <field name="commission_total" class="oe_inline"/>
                        <span class="oe_inline">
                            (<field name="commission_percentage" nolabel="1" class="oe_inline" widget="percentage"/>)
                        </span>
                    </div>
<!--                    <label for="commission_total" groups="base.group_user"/>-->
<!--                    <div class="text-nowrap" groups="base.group_user">-->
<!--                        <field name="commission_total" class="oe_inline"/>-->
<!--                    </div>-->
                </xpath>
            </field>
        </record>
    </data>
    <menuitem id="menu_type_sale_id"
              name="Tipo de venta"
              parent="sale.menu_sale_config"
              action="action_commission_id"
              sequence="1" />
</odoo>