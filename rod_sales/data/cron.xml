<odoo>
    <data noupdate="1">
        <!-- Definir el cron -->
        <record id="ir_cron_automatic_sales_action" model="ir.cron">
            <field name="name">Acción automática expiracion reservas de ventas</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.sale_verification()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
