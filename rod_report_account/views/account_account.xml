<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_account_form_inh">
            <field name="name">account.account.form.inh</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='allowed_journal_ids']" position="after">
                    <field name="account_category_id" class="oe_inline"/>
                    <field name="category_amount"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_account_list_inh">
            <field name="name">account.account.list.inh</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='internal_group']" position="after">
                    <field name="account_category_id" />
                    <field name="current_balance" column_invisible="1"/>
                    <field name="category_amount"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
